{
  "name": "jest-playwright-preset",
  "version": "2.0.0",
  "main": "index.js",
  "description": "Running tests using Jest & Playwright.",
  "license": "MIT",
  "keywords": [
    "jest",
    "playwright",
    "jest-playwright",
    "jest-playwright-preset"
  ],
  "author": "playwright-community",
  "bugs": {
    "url": "https://github.com/playwright-community/jest-playwright/issues"
  },
  "types": "./types/global.d.ts",
  "repository": {
    "url": "https://github.com/playwright-community/jest-playwright.git",
    "type": "git"
  },
  "homepage": "https://github.com/playwright-community/jest-playwright#readme",
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "tsc",
    "format": "prettier --write \"*.{ts,md}\" \"src/**/*.ts\"",
    "lint": "tsc --noEmit && eslint . --ext .js,.ts",
    "prepublishOnly": "npm run build",
    "test": "npm run test:src && npm run test:e2e",
    "test:src": "jest",
    "test:e2e": "jest -c jest.config.e2e.js",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": "eslint --fix"
  },
  "dependencies": {
    "expect-playwright": "^0.8.0",
    "jest-process-manager": "^0.3.1",
    "nyc": "^15.1.0",
    "playwright-core": ">=1.28.1",
    "rimraf": "^3.0.2",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "jest": "^28.0.0",
    "jest-circus": "^28.0.0",
    "jest-environment-node": "^28.0.0",
    "jest-runner": "^28.0.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/jest": "^29.2.4",
    "@types/node": "18.11.11",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "5.45.1",
    "@typescript-eslint/parser": "5.45.1",
    "eslint": "8.29.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "jest-runner": "^29.3.1",
    "lint-staged": "13.1.0",
    "playwright": ">=1.28.1",
    "playwright-chromium": ">=1.28.1",
    "prettier": "2.8.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.7.4"
  }
}
